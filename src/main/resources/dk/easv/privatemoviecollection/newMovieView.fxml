<VBox fx:id="VBox" prefHeight="626.0" prefWidth="364.0" spacing="15" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.privatemoviecollection.GUI.MovieEditController">

        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

    <Label fx:id="lblHeader" text="Add Movie">
        <font>
            <Font size="22" />
        </font>
    </Label>

    <GridPane fx:id="GridPane" hgap="10" prefHeight="490.0" prefWidth="324.0" vgap="10">
        <Label fx:id="LTitle" text="Title:" GridPane.rowIndex="0" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets top="4.0" />
         </GridPane.margin></Label>
      <AnchorPane prefHeight="200.0" prefWidth="198.0" GridPane.columnIndex="1">
         <children>
              <TextField fx:id="txtTitle" prefHeight="26.0" prefWidth="225.0" />
            <HBox fx:id="hBoxMovieFound" prefHeight="78.0" prefWidth="226.0" spacing="5.0" AnchorPane.topAnchor="29.0">
               <children>
                  <ImageView fx:id="ivMovie" fitHeight="78.0" fitWidth="51.0" pickOnBounds="true" preserveRatio="true" />
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <left>
                        <Text fx:id="txtMovieApiTitle" strokeType="OUTSIDE" strokeWidth="0.0" BorderPane.alignment="CENTER" />
                     </left>
                  </BorderPane>
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <Label fx:id="LTitle1" text="Genre:" GridPane.rowIndex="1" />
      <HBox prefHeight="400.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <VBox fx:id="checkListsLeft" prefHeight="200.0" prefWidth="100.0" spacing="5.0" />
            <VBox fx:id="checkListsRight" prefHeight="200.0" prefWidth="100.0" spacing="5.0" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <GridPane.margin>
            <Insets bottom="5.0" />
         </GridPane.margin>
      </HBox>

        <Label fx:id="LIMDbRating" text="IMDb Rating:" GridPane.rowIndex="2" />
        <TextField fx:id="txtImdbRating" prefHeight="25.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label fx:id="LPersonalRating" text="Personal Rating:" GridPane.rowIndex="3" />
        <TextField fx:id="txtPersonalRating" prefHeight="25.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Picture file path:" GridPane.rowIndex="4" />
        <TextField fx:id="txtPictureFilePath" prefHeight="25.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label text="Movie file path:" GridPane.rowIndex="5" />
      <TextField fx:id="txtMovieFilePath" prefHeight="25.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <columnConstraints>
         <ColumnConstraints maxWidth="103.19998321533203" minWidth="83.2" prefWidth="100.40001983642578" />
         <ColumnConstraints maxWidth="230.0" minWidth="182.40001678466797" prefWidth="213.1999801635742" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="200.0" minHeight="104.20001220703125" prefHeight="200.0" />
         <RowConstraints maxHeight="400.0" minHeight="31.19998779296877" prefHeight="400.0" />
         <RowConstraints maxHeight="45.600012207031256" minHeight="30.0" prefHeight="30.0" />
         <RowConstraints maxHeight="36.800012207031244" minHeight="30.0" prefHeight="30.0" />
         <RowConstraints maxHeight="33.19998779296873" minHeight="30.0" prefHeight="30.0" />
         <RowConstraints maxHeight="33.19998779296873" minHeight="30.0" prefHeight="30.0" />
      </rowConstraints>
    </GridPane>

    <HBox fx:id="HBox" spacing="10">
        <Button fx:id="btnSave" onAction="#onSave" text="Save" />
        <Button fx:id="btnCancel" onAction="#onCancel" text="Cancel" />
    </HBox>

</VBox>
