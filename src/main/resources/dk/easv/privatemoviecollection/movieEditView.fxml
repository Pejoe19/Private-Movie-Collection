<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<VBox spacing="15"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dk.easv.privatemoviecollection.GUI.MovieEditController">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

    <Label fx:id="lblHeader" text="Add Movie">
        <font>
            <Font size="22"/>
        </font>
    </Label>

    <GridPane hgap="10" vgap="10">
        <Label text="Title:" GridPane.rowIndex="0"/>
        <TextField fx:id="txtTitle" GridPane.columnIndex="1"/>

        <Label text="IMDb Rating:" GridPane.rowIndex="1"/>
        <TextField fx:id="txtImdbRating" GridPane.columnIndex="1"/>

        <Label text="Personal Rating:" GridPane.rowIndex="2"/>
        <TextField fx:id="txtPersonalRating" GridPane.columnIndex="1"/>

        <Label text="File Path:" GridPane.rowIndex="3"/>
        <TextField fx:id="txtFilePath" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Save"/>
        <Button text="Cancel"/>
    </HBox>

</VBox>