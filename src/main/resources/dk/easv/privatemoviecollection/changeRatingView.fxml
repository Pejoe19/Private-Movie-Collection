<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="dk.easv.privatemoviecollection.GUI.ChangeRatingController">
    <Label text="Change Ratings" />

    <HBox spacing="10">
        <Label text="IMDb Rating:" />
        <TextField fx:id="txtImdbRating" />
    </HBox>

    <HBox spacing="10">
        <Label text="Personal Rating:" />
        <TextField fx:id="txtPersonalRating" />
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnSave" onAction="#onSave" text="Save" />
        <Button fx:id="btnCancel" onAction="#onCancel" text="Cancel" />
    </HBox>
</VBox>
